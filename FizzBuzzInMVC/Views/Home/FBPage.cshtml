
@model FizzBuzzInMVC.Models.FizzBuzz

<h1>FizzBuzz Page</h1>

<div class="container mt-5">
            <div class="row row-cols-1 row-cols-md-2">
                <div class="col-md-4 col border-end border-2">
                    <h1>FizzBuzz</h1>
                    <h4 class="lead">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Animi illum at,
                        voluptatibus
                        ad quas adipisci praesentium suscipit, ipsam blanditiis, corporis porro amet dolorem maxime
                        optio
                        earum quisquam veniam esse nulla!</h4>
                    <h2 class="mt-5 border-bottom border-2">Instructions</h2>
                    <p>Enter the values end start</p>
                </div>
                <div class="col-md-8 col">
                    <div>
                        <h5>
                            Enter values
                        </h5>
                        @*Form goes here*@
                        <form asp-controller="Home" asp-action="FBPage" method="post">
                            <div class="form-group">
                                <label asp-for="FizzValue">Fizz Value</label>
                                <input asp-for="FizzValue" class="form-control" type="number" placeholder="Enter Fizz" value="@Model.FizzValue"> 
                            </div>
                           <div class="form-group">
                                <label asp-for="BuzzValue">Buzz Value</label>
                                <input asp-for="BuzzValue" class="form-control" type="number" placeholder="Enter Buzz" value="@Model.BuzzValue"> 
                            </div>
                            
                                <button type="submit" class="btn btn-dark">Go</button>
                            
                        </form>
                        <h2 class="mt-5 border-bottom border-2">Results</h2>
                        <div class="table-responsive">
                            @if(@Model.Result.Count() >0)
                    {
                        <table class="table-striped table-hover table table-dark">
                            <thead>

                                <tr><th colspan="5">Fizz Buzz Results</th></tr>
                            </thead>
                            @for(int i =1; i<Model.Result.Count(); i += 5)
                            {
                                <tr><td>@Model.Result[i]</td><td>@Model.Result[i+1]</td><td>@Model.Result[i+2]</td><td>@Model.Result[i+3]</td><td>@Model.Result[i+4]</td></tr>
                            }


                        </table>
                    }
                </div>
                        </div>
                        </div>
                        </div>
                        </div>